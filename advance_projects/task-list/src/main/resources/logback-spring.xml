<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- 控制台輸出配置 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) %magenta([%thread]) %cyan(%logger{50}) : %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <!-- 文件輸出配置 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/task-list.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/task-list.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>
    
    <!-- 業務邏輯專用日誌 -->
    <appender name="BUSINESS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/business.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/business.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>
    
    <!-- 通知系統專用日誌 -->
    <appender name="NOTIFICATION" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/notification.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/notification.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>
    
    <!-- 特定包的日誌級別配置 -->
    
    <!-- TaskReminderUseCase 詳細日誌 -->
    <logger name="com.tygrus.task_list.application.usecase.TaskReminderUseCase" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="BUSINESS"/>
        <appender-ref ref="NOTIFICATION"/>
    </logger>
    
    <!-- 所有通知服務的日誌 -->
    <logger name="com.tygrus.task_list.application.service.notification" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="NOTIFICATION"/>
    </logger>
    
    <!-- 批次更新用例的詳細日誌 -->
    <logger name="com.tygrus.task_list.application.usecase.BatchUpdateTasksUseCase" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="BUSINESS"/>
    </logger>
    
    <!-- Observer 模式的日誌 -->
    <logger name="com.tygrus.task_list.domain.observer" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="BUSINESS"/>
    </logger>
    
    <!-- 排程器的日誌 -->
    <logger name="com.tygrus.task_list.infrastructure.scheduler" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="BUSINESS"/>
    </logger>
    
    <!-- Spring 框架日誌 -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.hibernate" level="INFO"/>
    
    <!-- 測試環境專用配置 -->
    <springProfile name="test">
        <logger name="com.tygrus.task_list" level="TRACE"/>
        <logger name="org.springframework" level="WARN"/>
        <logger name="org.hibernate" level="WARN"/>
    </springProfile>
    
    <!-- 開發環境專用配置 -->
    <springProfile name="dev">
        <logger name="com.tygrus.task_list" level="DEBUG"/>
        <logger name="org.springframework" level="INFO"/>
    </springProfile>
    
    <!-- 生產環境專用配置 -->
    <springProfile name="prod">
        <logger name="com.tygrus.task_list" level="INFO"/>
        <logger name="org.springframework" level="WARN"/>
        <logger name="org.hibernate" level="WARN"/>
    </springProfile>
    
    <!-- 根日誌級別 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
    
</configuration>